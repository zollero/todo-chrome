{
	"name": "todo app",
	"version": "1.0",
	"manifest_version": 2,
	"description": "Chrome extension: Todo App",
	"browser_action": {
		"default_icon": "images/icon.jpeg",
		"default_title": "Todo List",
		"default_popup": "popup.html"
	},
	"permissions": [
        "http://hq.sinajs.cn/list=*"
        "tabs",
        "activeTab",
        "notifications",
        "storage"
    ],
	"options_page": "options.html",
	"background": {
		"scripts": ["js/background.js"]
	}
}
